<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.TeamGlapp.BCIBUU.garbagelocator.ViewImage"
    android:background="#fffecd"
    android:orientation="vertical">


    <TextView android:text="Added by Someone" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textColor="#1a237e"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/webView"
        android:layout_gravity="center_horizontal|top"
        android:visibility="visible" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:text="Garbage Cleared! Add Photo." android:textColor="#ffffff"
        android:id="@+id/button3"
        android:onClick="ClearedClick"
        android:background="#55ff00"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp" android:textColor="#1a237e"
        android:text=" Address of Garbage in Text and Lat Lon"
        android:id="@+id/textView8"
        android:layout_toLeftOf="@+id/button4"
        android:layout_marginRight="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND EMAIL"
        android:id="@+id/button4"
        android:background="@drawable/shape"
        android:textColor="#ffffff"
        android:onClick="onEmailClick"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right" />
    </LinearLayout>


</LinearLayout>